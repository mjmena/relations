{
  "name": "relations",
  "version": "0.1.0",
  "private": true,
  "proxy": {
    "/graphql": {
      "target": "http://0.0.0.0:8081",
      "ws": true
    }
  },
  "dependencies": {
    "@webscopeio/react-textarea-autocomplete": "^2.2.0",
    "apollo-boost": "^0.1.6",
    "apollo-server": "^2.0.0-beta.1",
    "draft-js": "^0.10.5",
    "draft-js-mention-plugin": "^3.0.4",
    "draft-js-plugins-editor": "^2.0.8",
    "fuse.js": "^3.2.0",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.2",
    "immutable": "^3.8.2",
    "mongoose": "^5.1.1",
    "react": "^16.3.2",
    "react-apollo": "^2.1.4",
    "react-dom": "^16.3.2",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.4",
    "slate": "^0.33.6",
    "slate-react": "^0.12.6",
    "slate-suggestions": "^0.4.0"
  },
  "scripts": {
    "start": "npm-run-all -p start:server start:client",
